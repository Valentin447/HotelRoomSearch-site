doctype html
html(lang="ru")
    head
        title= 'Form Elements'
    body.FormElements
        .FormElementsCenterLayer
            include ../../../blocks/gray-logo/gray-logo
            include ../../../blocks/text-field/text-field
            include ../../../blocks/dropdown/dropdown
            span.signature.signatureTextFieldDefault DEFAULT
            span.signature.signatureTextFieldHoverFocus HOVER / FOCUS
            span.signature.signatureDropdownDefault DEFAULT
            span.signature.signatureTextFieldMaskedDate DEFAULT

            .FormElementLayout
                +textField('Email', 'Text Field', 'UiKitTextFieldDefault')
                +textField('This is pretty awesome', 'Text Field', 'UiKitTextFieldHoverFocus')(class='text-field_hover-focus')
                +dropdown('Сколько гостей', 'Dropdown')
                +textField('ДД.ММ.ГГГГ', 'masked text field', 'UiKitTextFieldMaskedDate')(class='text-field_masked-date')
                .dropdown-short-joint
                    +dropdown('ДД.ММ.ГГГГ', 'date dropdown')(class='dropdown-short')
                    +dropdown('19.08.2019', 'date dropdown')(class='dropdown-short')
                