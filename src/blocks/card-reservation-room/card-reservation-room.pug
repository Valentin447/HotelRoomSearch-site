include ../button/button
include ../text-field/text-field
include ../dropdown/dropdown

.card-reservation-room
    .card-reservation-room-layout
        .card-reservation-room-info-top
            .card-reservation-room-info-top-room
                span.card-reservation-room-info-top-number-first= '№ '
                span.card-reservation-room-info-top-number-last= '888'
                span.card-reservation-room-info-top-text= 'люкс'
            .card-reservation-room-info-top-price
                span.card-reservation-room-info-top-price-number= '9 990₽'
                span.card-reservation-room-info-top-price-text= ' в сутки'
        .card-reservation-room-date
            .card-reservation-room-start
                +dropdown('19.08.2019', 'прибытие', 'dropdown_date')
            .card-reservation-room-end
                +dropdown('23.08.2019', 'выезд', 'dropdown_date')
        .card-reservation-room-guests
            +dropdown('Сколько гостей', 'гости','dropdown_guests', 'взрослые', 'дети', 'младенцы','3','0','0') 
        .card-reservation-room-sum
            p.card-reservation-room-sum-equation= '9 990₽ х 4 суток'
            p.card-reservation-room-sum-result= '39 960₽'
        .card-reservation-room-discount
            .card-reservation-room-discount-left
                p.card-reservation-room-discount-left-text= 'Сбор за услуги: скидка 2 179₽'
                .card-reservation-room-discount-left-help
                    p.card-reservation-room-discount-left-help-i= 'i'
            p.card-reservation-room-discount-right= '0₽'
        .card-reservation-room-additional-services
            .card-reservation-room-additional-services-left
                p.card-reservation-room-additional-services-left-text= 'Сбор за дополнительные услуги'
                .card-reservation-room-additional-services-left-help
                    p.card-reservation-room-additional-services-left-help-i= 'i'
            p.card-reservation-room-additional-services-right= '300₽'
        .card-reservation-room-total
            p.card-reservation-room-total-text= 'Итого'
            .card-reservation-room-total-points
            p.card-reservation-room-total-number= '38 081₽'
        .card-reservation-room-buttom
            +button('забронировать')(class='button_default')





