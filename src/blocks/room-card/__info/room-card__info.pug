include ../../rate-button/rate-button

mixin info(numberRoom, price, quantityReviews, rating, lux) 
    - let lengthPrice = String(price).length;
    - let textPrice = String(price);
        if(lengthPrice > 3)
            -textPrice=textPrice.slice(0, -3) + ' ' + textPrice.slice(-3)
    .room-card__info
        .room-card__info-top
            .room-card__info-top-contaner
                .room-card__info-top-number
                    span.room-card__info-top-number-symbol='№ '
                    span.room-card__info-top-number-room=numberRoom
                if(lux)
                    p.room-card__info-top-lux='люкс'
            p.room-card__info-top-price=textPrice+'₽ '
                span.room-card__info-top-price-time='в сутки'
        .room-card__info-bottom
            .room-card__info-bottom-stars
                +rate-button(rating)
            .room-card__info-bottom-reviews
                span.room-card__info-bottom-reviews-quantity=quantityReviews
                span.room-card__info-bottom-reviews-text=' Отзывов'